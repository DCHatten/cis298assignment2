<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start|top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/convert"
                android:textSize="32dp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/user_input"
                android:textSize="32dp"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:textSize="32dp"
                    android:textColor="@android:color/darker_gray"/>

                <RadioButton
                    android:id="@+id/celsius_frombutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/celsius"
                    android:textSize="32dp"/>

                <RadioButton
                    android:id="@+id/farenheit_frombutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/farenheit"
                    android:textSize="32dp"/>

                <RadioButton
                    android:id="@+id/kelvin_frombutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kelvin"
                    android:textSize="32dp"/>

                <RadioButton
                    android:id="@+id/rankin_frombutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rankin"
                    android:textSize="32dp"/>
            </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to"
                android:textSize="32dp"
                android:textColor="@android:color/darker_gray"/>

            <RadioButton
                android:id="@+id/celsius_tobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/celsius"
                android:textSize="32dp"/>

            <RadioButton
                android:id="@+id/farenheit_tobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/farenheit"
                android:textSize="32dp"/>

            <RadioButton
                android:id="@+id/kelvin_tobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kelvin"
                android:textSize="32dp"/>

            <RadioButton
                android:id="@+id/rankin_tobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rankin"
                android:textSize="32dp"/>
        </RadioGroup>
    </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/convert_button"
            android:id="@+id/convert_button"
            android:layout_gravity="center_horizontal"
            android:textSize="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/coversion_answer"
        android:textSize="38dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text=""
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/conversion_formula"
        android:textSize="20dp"
        android:text=""
        android:textColor="@android:color/darker_gray"/>
    </LinearLayout>
</FrameLayout>
